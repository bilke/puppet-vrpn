<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>vrpn_server</string>
    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>A VR device server.</string>

      <key>Port</key>
      <integer><%= scope.lookupvar "vrpn::config::port" %></integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
        <string><%= scope.lookupvar "vrpn::config::executable" %></string>
        <string>-f</string>
        <string><%= scope.lookupvar "vrpn::config::configfile" %></string>
        <string><%= scope.lookupvar "vrpn::config::port" %></string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>

    <key>UserName</key>
    <string><%= scope.lookupvar "::luser" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "vrpn::config::logdir" %>/console.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "vrpn::config::logdir" %>/console.log</string>

</dict>
</plist>
